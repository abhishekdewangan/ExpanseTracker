<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="4dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/transactionItemView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_ripple"
        android:clickable="true"
        android:focusable="true">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imgTransactionType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_spent_money" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvTransactionAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="@dimen/margin24dp"
            android:layout_marginTop="@dimen/margin24dp"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize20Sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/imgTransactionType"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Rs. 15,980.00" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvTransactionTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin24dp"
            android:layout_marginStart="@dimen/margin24dp"
            android:layout_marginTop="5dp"
            android:alpha=".54"
            android:textColor="@color/lightText"
            android:textSize="@dimen/textSize12Sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/imgTransactionType"
            app:layout_constraintTop_toBottomOf="@+id/tvTransactionAmount"
            tools:text="21 transactions" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>